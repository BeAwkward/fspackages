<ModelBehaviors>
	<!-- AP -->
	<Template Name="ASOBO_AUTOPILOT_Push_Heading_Template">
		<DefaultTemplateParameters>
			<DEFAULT_NAME>Heading</DEFAULT_NAME>
			<HELPID>HELPID_AUTOPILOT_HEADING_HOLD</HELPID>
			<TOOLTIPID>%((L:WT_CJ4_HDG_ON, BOOL))%{if}TT:COCKPIT.TOOLTIPS.AUTOPILOT_PANEL_HDG_BUTTON_ON%{else}TT:COCKPIT.TOOLTIPS.AUTOPILOT_PANEL_HDG_BUTTON_OFF%{end}</TOOLTIPID>
			<LEFT_SINGLE_CODE>
				(L:WT_CJ4_HDG_ON) ! (&gt;L:WT_CJ4_HDG_ON)
				0 (&gt;L:WT_CJ4_NAV_ON)
			</LEFT_SINGLE_CODE>
			<EMISSIVE_SIMVAR_ACTIVE>AUTOPILOT HEADING LOCK</EMISSIVE_SIMVAR_ACTIVE>
		</DefaultTemplateParameters>
		<UseTemplate Name="ASOBO_AUTOPILOT_Push_Template">
		</UseTemplate>
	</Template>

	<Template Name="ASOBO_AUTOPILOT_Push_Navigation_Template">
		<DefaultTemplateParameters>
			<DEFAULT_NAME>Navigation</DEFAULT_NAME>
			<HELPID>HELPID_AUTOPILOT_NAV_HOLD</HELPID>
			<TOOLTIPID>%((L:WT_CJ4_NAV_ON, bool))%{if}TT:COCKPIT.TOOLTIPS.AUTOPILOT_PANEL_NAV_ON%{else}TT:COCKPIT.TOOLTIPS.AUTOPILOT_PANEL_NAV_OFF%{end}</TOOLTIPID>
		</DefaultTemplateParameters>
		<UseTemplate Name="ASOBO_AUTOPILOT_Push_Template">
			<LEFT_SINGLE_CODE>
				(L:WT_CJ4_NAV_ON) ! (&gt;L:WT_CJ4_NAV_ON)
				0 (&gt;L:WT_CJ4_HDG_ON)
			</LEFT_SINGLE_CODE>
			<EMISSIVE_SIMVAR_ACTIVE>AUTOPILOT NAV1 LOCK</EMISSIVE_SIMVAR_ACTIVE>
		</UseTemplate>
	</Template>

	<Template Name="ASOBO_AUTOPILOT_Push_Approach_Template">
		<DefaultTemplateParameters>
			<MAX_BANK_DEGREES>30</MAX_BANK_DEGREES>
			<DEFAULT_NAME>Approach</DEFAULT_NAME>
			<HELPID>HELPID_AUTOPILOT_APP_HOLD</HELPID>
			<TOOLTIPID>%((A:AUTOPILOT APPROACH HOLD, Bool) (A:AUTOPILOT GLIDESLOPE HOLD, Bool) and)%{if}TT:COCKPIT.TOOLTIPS.AUTOPILOT_PANEL_APR_ON%{else}TT:COCKPIT.TOOLTIPS.AUTOPILOT_PANEL_APR_OFF%{end}</TOOLTIPID>
		</DefaultTemplateParameters>
		<OverrideTemplateParameters>
			<Condition Valid="DISABLE_GPS_MODE">
				<True>
					<GPS_DISABLE_CODE>(A:GPS DRIVES NAV1, Bool) if{ (A:GPS APPROACH APPROACH TYPE, Enum) 4 == if{ (&gt;K:TOGGLE_GPS_DRIVES_NAV1) } } els{ (A:GPS APPROACH APPROACH TYPE, Enum) 10 == if{ (&gt;K:TOGGLE_GPS_DRIVES_NAV1) } }</GPS_DISABLE_CODE>
				</True>
				<False>
					<GPS_DISABLE_CODE></GPS_DISABLE_CODE>
				</False>
			</Condition>
		</OverrideTemplateParameters>
		
		<UseTemplate Name="ASOBO_AUTOPILOT_Push_Template">
			<LEFT_SINGLE_CODE>
				#GPS_DISABLE_CODE# 
				(A:AUTOPILOT APPROACH HOLD, Bool) (A:AUTOPILOT GLIDESLOPE HOLD, Bool) ! and if{ (&gt;K:AP_APR_HOLD) }
				(&gt;K:AP_APR_HOLD)
				0 (&gt;L:WT_CJ4_HDG_ON)
				0 (&gt;L:WT_CJ4_NAV_ON)
			</LEFT_SINGLE_CODE>
			<EMISSIVE_CODE_ACTIVE>
				(A:AUTOPILOT APPROACH HOLD, Bool) (A:AUTOPILOT GLIDESLOPE HOLD, Bool) and
			</EMISSIVE_CODE_ACTIVE>
		</UseTemplate>
	</Template>
	<Template Name="ASOBO_AUTOPILOT_Push_BackCourse_Template">
		<DefaultTemplateParameters>
			<DEFAULT_NAME>BackCourse</DEFAULT_NAME>
			<HELPID>HELPID_AUTOPILOT_BC_HOLD</HELPID>
			<TOOLTIPID>%((A:AUTOPILOT BACKCOURSE HOLD, bool))%{if}TT:COCKPIT.TOOLTIPS.AUTOPILOT_PANEL_BC_ON%{else}TT:COCKPIT.TOOLTIPS.AUTOPILOT_PANEL_BC_OFF%{end}</TOOLTIPID> 
		</DefaultTemplateParameters>
		<UseTemplate Name="ASOBO_AUTOPILOT_Push_Template">
			<LEFT_SINGLE_CODE>
				(&gt;K:AP_BC_HOLD)
				0 (&gt;L:WT_CJ4_HDG_ON)
				0 (&gt;L:WT_CJ4_NAV_ON)
			</LEFT_SINGLE_CODE>
			<EMISSIVE_SIMVAR_ACTIVE>AUTOPILOT BACKCOURSE HOLD</EMISSIVE_SIMVAR_ACTIVE>
		</UseTemplate>
	</Template>


	<!-- CCP ############################################## -->
	<Template Name="WT_Detached_Control_Panel_Template">
		<DefaultTemplateParameters>
			<AS3000>AS3000</AS3000>
			<DISPLAY>MFD</DISPLAY>
			<TYPE></TYPE>
			<ID>1</ID>
			<ANIM_NEVER_FAILS/>
		</DefaultTemplateParameters>

		<UseTemplate Name="ASOBO_GT_Helper_Suffix_ID_Appender">
			<TEMPLATE_TO_CALL>WT_Detached_Control_Panel_SubTemplate</TEMPLATE_TO_CALL>
		</UseTemplate>
	</Template>

	<Template Name="WT_Detached_Control_Panel_SubTemplate">
		<DefaultTemplateParameters>
			<KEY_PREFIX>#AS3000#_#DISPLAY#</KEY_PREFIX>
		</DefaultTemplateParameters>
		<!-- LOWER PANEL -->
		<Condition Valid="NODE_ID_CKLST">
			<Component ID="#NODE_ID_CKLST#" Node="#NODE_ID_CKLST#">
				<UseTemplate Name="ASOBO_GT_Push_Button">
					<ANIM_NAME>#NODE_ID_CKLST#</ANIM_NAME>
					<LEFT_SINGLE_CODE>(&gt;H:#KEY_PREFIX#_Push_CKLST_1)</LEFT_SINGLE_CODE>
					<WWISE_EVENT_1>as3000_push_button_on</WWISE_EVENT_1>
					<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
					<WWISE_EVENT_2>as3000_push_button_off</WWISE_EVENT_2>
					<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
					<TOOLTIPID>Checklist</TOOLTIPID>
				</UseTemplate>
			</Component>
		</Condition>
		<Condition Valid="NODE_ID_PASSBRIEF">
			<Component ID="#NODE_ID_PASSBRIEF#" Node="#NODE_ID_PASSBRIEF#">
				<UseTemplate Name="ASOBO_GT_Push_Button">
					<ANIM_NAME>#NODE_ID_PASSBRIEF#</ANIM_NAME>
					<LEFT_SINGLE_CODE>(&gt;H:#KEY_PREFIX#_Push_PASSBRIEF_1)</LEFT_SINGLE_CODE>
					<WWISE_EVENT_1>as3000_push_button_on</WWISE_EVENT_1>
					<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
					<WWISE_EVENT_2>as3000_push_button_off</WWISE_EVENT_2>
					<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
					<TOOLTIPID>Passenger Brief</TOOLTIPID>
				</UseTemplate>
			</Component>
		</Condition>
		<Condition Valid="NODE_ID_MEM1">
			<Component ID="#NODE_ID_MEM1#" Node="#NODE_ID_MEM1#">
				<UseTemplate Name = "ASOBO_GT_Push_Button_Timed">
					<ANIM_NAME>#NODE_ID_MEM1#</ANIM_NAME>
					<SHORT_CLICK_CODE>(&gt;H:#KEY_PREFIX#_Push_MEM1_1)</SHORT_CLICK_CODE>
					<LONG_CLICK_CODE>(&gt;H:#KEY_PREFIX#_Hold_MEM1_1)</LONG_CLICK_CODE>
					<WWISE_EVENT_1>as3000_push_button_on</WWISE_EVENT_1>
					<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
					<WWISE_EVENT_2>as3000_push_button_off</WWISE_EVENT_2>
					<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
					<TOOLTIPID>Memory 1</TOOLTIPID>
				</UseTemplate>
			</Component>
		</Condition>
		<Condition Valid="NODE_ID_MEM2">
			<Component ID="#NODE_ID_MEM2#" Node="#NODE_ID_MEM2#">
				<UseTemplate Name = "ASOBO_GT_Push_Button_Timed">
					<ANIM_NAME>#NODE_ID_MEM2#</ANIM_NAME>
					<SHORT_CLICK_CODE>(&gt;H:#KEY_PREFIX#_Push_MEM2_1)</SHORT_CLICK_CODE>
					<LONG_CLICK_CODE>(&gt;H:#KEY_PREFIX#_Hold_MEM2_1)</LONG_CLICK_CODE>
					<WWISE_EVENT_1>as3000_push_button_on</WWISE_EVENT_1>
					<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
					<WWISE_EVENT_2>as3000_push_button_off</WWISE_EVENT_2>
					<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
					<TOOLTIPID>Memory 2</TOOLTIPID>
				</UseTemplate>
			</Component>
		</Condition>
		<Condition Valid="NODE_ID_MEM3">
			<Component ID="#NODE_ID_MEM3#" Node="#NODE_ID_MEM3#">
				<UseTemplate Name = "ASOBO_GT_Push_Button_Timed">
					<ANIM_NAME>#NODE_ID_MEM3#</ANIM_NAME>
					<SHORT_CLICK_CODE>(&gt;H:#KEY_PREFIX#_Push_MEM3_1)</SHORT_CLICK_CODE>
					<LONG_CLICK_CODE>(&gt;H:#KEY_PREFIX#_Hold_MEM3_1)</LONG_CLICK_CODE>
					<WWISE_EVENT_1>as3000_push_button_on</WWISE_EVENT_1>
					<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
					<WWISE_EVENT_2>as3000_push_button_off</WWISE_EVENT_2>
					<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
					<TOOLTIPID>Memory 3</TOOLTIPID>
				</UseTemplate>
			</Component>
		</Condition>
	</Template>
</ModelBehaviors>